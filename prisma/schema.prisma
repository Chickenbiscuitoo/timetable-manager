// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id        Int        @id @default(autoincrement())
  name      String     @db.VarChar(128)
  shortname String     @db.VarChar(8)
  email     String     @db.VarChar(255)
  classId   Class?
  commitee  Committee?
  lessons   Lesson[]
  bindings  Binding[]
}

model Subject {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  shortname String   @db.VarChar(8)
  commitee  Int
  lessons   Lesson[]

  commiteeId Committee @relation(fields: [commitee], references: [id])
  Binding    Binding[]
}

model Committee {
  id       Int       @id @default(autoincrement())
  name     String    @db.VarChar(255)
  chairman Int       @unique
  subjects Subject[]

  chairmanId Teacher @relation(fields: [chairman], references: [id])
}

model Class {
  id      Int      @id @default(autoincrement())
  name    String   @db.VarChar(32)
  grade   Int
  teacher Int      @unique
  lessons Lesson[]

  teacherId Teacher   @relation(fields: [teacher], references: [id])
  Binding   Binding[]
}

model Lesson {
  id       Int       @id @default(autoincrement())
  class    Int
  subjects Subject[]
  teachers Teacher[]
  day      Int
  period   Int

  classId Class @relation(fields: [class], references: [id])

  @@unique([day, period, class])
}

model Binding {
  id       Int       @id @default(autoincrement())
  teachers Teacher[]
  subject  Int
  class    Int

  classId   Class   @relation(fields: [class], references: [id])
  subjectId Subject @relation(fields: [subject], references: [id])
}
